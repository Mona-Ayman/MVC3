@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="mt-2">
    <form method="get" asp-action="Index" class="row offset-2">
        <div class="col-10">
            <input class="form-control" placeholder="Users's Name" name="searchEmail" required />
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>
<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(d => d.Id)</th>
            <th>@Html.DisplayNameFor(d => d.FirstName)</th>
            <th>@Html.DisplayNameFor(d => d.LastName)</th>
            <th>@Html.DisplayNameFor(d => d.UserName)</th>
            <th>@Html.DisplayNameFor(d => d.Email)</th>
            <th>@Html.DisplayNameFor(d => d.Roles)</th>
          
            <th>Detais</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@string.Join(",",item.Roles)</td>
              
             
                <partial name="_ButtonPartialView" model="@item.Id"></partial>
            </tr>
        }
    </tbody>
</table>


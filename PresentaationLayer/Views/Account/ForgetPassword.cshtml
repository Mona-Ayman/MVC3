@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form action="ForgetPassword" method="post">
			<div asp-validation-summary="All"></div>
			<br />
			<input class="text" type="text" asp-for="Email" placeholder="Email" required="">
			<span class="text-danger" asp-validation-for="Email"></span>

			<br />
			
			<input type="submit" value="Send Reset Password Email">
		</form>
		<p><a asp-action="Login">Cancel</a></p>
	</div>
</div>

@section Validation {
	<script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
}
@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<a asp-action="Create" class="btn btn-primary mt-3">Create New Role</a>
<div class="mt-2">
    <form method="get" asp-action="Index" class="row offset-2">
        <div class="col-10">
            <input class="form-control" placeholder="Role's Name" name="searchName" required />
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>
<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(d => d.Id)</th>
            <th>@Html.DisplayNameFor(d => d.Name)</th>
          
            <th>Detais</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
             
                <partial name="_ButtonPartialView" model="@item.Id"></partial>
            </tr>
        }
    </tbody>
</table>


@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}
<div>
    <a class="btn btn-success" asp-action="Create">Create Employee</a>
</div>

<div class="mt-2">
    <form method="get" asp-action="Index" class="row offset-2">
        <div class="col-10">
            <input class="form-control" placeholder="Employee's Name" name="searchName" required />
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>
<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(d => d.Image)</th>
            <th>@Html.DisplayNameFor(d => d.Id)</th>
            <th>@Html.DisplayNameFor(d => d.Name)</th>
            <th>@Html.DisplayNameFor(d => d.Age)</th>
            <th>@Html.DisplayNameFor(d => d.Salary)</th>
            <th>@Html.DisplayNameFor(d => d.Department)</th>
            <th>@Html.DisplayNameFor(d => d.Address)</th>
            <th>@Html.DisplayNameFor(d => d.Email)</th>
            <th>@Html.DisplayNameFor(d => d.Phone)</th>
            <th>@Html.DisplayNameFor(d => d.IsActive)</th>
            <th>Detais</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/Files/Images/@item.ImageName" hight="75" width="75" class="rounded"/></td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@Html.DisplayFor(e => item.Salary)</td>
                <td>@Html.DisplayFor(e => item.Department.Name)</td>
                <td>@item.Address</td>
                <td>@Html.DisplayFor(e => item.Email)</td>
                <td>@Html.DisplayFor(e => item.Phone)</td>
                <td>
                    @if (item.IsActive == true)
                    {
                        <i class="fa-solid fa-circle" style="color:green"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-circle" style="color:red"></i>

                    }
                </td>
                <partial name="_ButtonPartialView" model="@item.Id"></partial>
            </tr>
        }
    </tbody>
</table>


@model Department
@{
    ViewData["Title"] = "Details";
}

<h3>@Model.Name Department Details</h3>

<form class="form">

    <div class="form-group">
        <label asp-for="Code"></label>
        <input readonly class="form-control" asp-for="Code" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input readonly class="form-control" asp-for="Date" />
    </div>
    <div class="mt-3">
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>
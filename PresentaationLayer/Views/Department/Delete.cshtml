@model Department
@{
    ViewData["Title"] = "Delete";
}

<h3>Delete @Model.Name Department</h3>
<form class="form" asp-action="Delete" asp-route-id="@Model.Id">

    <div class="form-group">
        <label asp-for="Code"></label>
        <input readonly class="form-control" asp-for="Code" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input readonly class="form-control" asp-for="Date" />
    </div>
    <div class="mt-3">
        <button class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>

